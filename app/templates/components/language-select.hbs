<div class="form-group">
  <div class="col-5"></div>
  <div class="col-2 col-mx-auto">
    <label class="form-label" for="lang">{{t "language-select.select"}}</label>
    <select
      class="form-select"
      id="lang"
      onchange={{action setLocale value="target.value"}}
    >
      {{#each locales as |loc|}}
        <option value={{loc.id}} selected={{eq loc.id i18n.locale}}>
          {{loc.text}}
        </option>
      {{/each}}
    </select>
  </div>
  <div class="col-5"></div>
</div>